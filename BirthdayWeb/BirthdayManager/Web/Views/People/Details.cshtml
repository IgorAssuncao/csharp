@model Model.Person

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1> 
@{ 
    var person = Model;
}
<div>
    <h4>Person</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Id
        </dt>
        <dd class = "col-sm-10">
            @person.Id
        </dd>
        <dt class = "col-sm-2">
            Name
        </dt>
        <dd class = "col-sm-10">
            @person.Name
        </dd>
        <dt class = "col-sm-2">
            Lastname
        </dt>
        <dd class = "col-sm-10">
            @person.Lastname
        </dd>
        <dt class = "col-sm-2">
            Birthday
        </dt>
        <dd class = "col-sm-10">
            @person.Birthday.Month/@person.Birthday.Day/@person.Birthday.Year
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Edit", "Edit", new { person.Id }) |
    @Html.ActionLink("Delete", "Delete", new { person.Id })
</div>

<div>
    <a asp-action="Index">Back to main List</a>
</div>
