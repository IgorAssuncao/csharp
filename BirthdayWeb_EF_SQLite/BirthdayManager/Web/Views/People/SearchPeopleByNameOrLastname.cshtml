@model List<Model.Person>

@{
    ViewData["Title"] = "SearchPeopleByNameOrLastname";
}

<div>
    <a asp-action="Index">Back to main List</a>
</div>

<h1>SearchPeopleByNameOrLastname Result</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                Name
            </th>
            <th>
                Lastname
            </th>
            <th>
                Birthday
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @item.Id
            </td>
            <td>
                @item.Name
            </td>
            <td>
                @item.Lastname
            </td>
            <td>
                @item.Birthday.Month/@item.Birthday.Day/@item.Birthday.Year
            </td>
            <td>
                @Html.ActionLink("Details", "Details", new { item.Id }) |
                @Html.ActionLink("Edit", "Edit", new { item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { item.Id })
            </td>
        </tr>
}
    </tbody>
</table>
